<% if @customer.errors.any? %>
  <ul class="alert alert-danger" role="alert">
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="jumbotron">
  <h1 class="display-4">Editar cliente</h1>
  <p class="lead">Edição de cadastro existente</p>
</div>

<div class="content">  
  <%= form_for @customer do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br />
  
    <%= f.label :email %>
    <%= f.text_field :email %><br />
  
    <%= f.label :phone %>
    <%= f.text_field :phone %><br />
  
    <%= f.label :avatar %>
    <%= f.file_field :avatar %><br />
  
    <%= f.label :smoker %> <br />
    <% { 'S': 'Sim', 'N': 'Não' }.each do |key, value| %>
      <%= f.radio_button :smoker, key %> <%= value %> <br />
    <% end %>
    <br>
    <%= f.submit 'Atualizar cliente', :class => "btn btn-primary btn-lg" %>
  <% end %>
</div>
